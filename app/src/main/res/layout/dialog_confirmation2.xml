<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_confirmation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_floating_material_light"
    android:orientation="vertical">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar" />

    <LinearLayout
        android:id="@+id/l6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_bar"
        android:layout_gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <!--<TextView
            android:id="@+id/tag2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Nome"
            android:textSize="16sp"
            android:textStyle="normal|bold" />-->

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Joao Rodrigues "
            android:textSize="30sp"
            android:textStyle="normal|bold"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:layout_below="@+id/l4"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@+id/imageView">

        <TextView
            android:id="@+id/tag3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Dias"
            android:textSize="13sp"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:gravity="left"
            android:text="defaultValue " />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/l2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/l5"
        android:layout_gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="25dp"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@+id/imageView">

        <TextView
            android:id="@+id/type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="defaultValue "
            android:gravity="center_horizontal" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/l3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/l2"
        android:layout_gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@+id/imageView">

        <TextView
            android:id="@+id/subtype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="defaultValue " />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/l4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="32dp"
        android:orientation="horizontal"
        android:layout_alignWithParentIfMissing="false"
        android:measureWithLargestChild="false"
        android:longClickable="false"
        android:layout_below="@+id/l3"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@+id/imageView">

        <TextView
            android:id="@+id/tag6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Zonas"
            android:textSize="13sp"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/zone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:gravity="left"
            android:text="defaultValue " />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/l5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/l6"
        android:layout_gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <!--<TextView
            android:id="@+id/tag1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Bi"
            android:textSize="16sp"
            android:textStyle="normal|bold" />-->

        <TextView
            android:id="@+id/identificationnumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="defaultValue "
            android:textSize="25sp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/l7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="0dp"
        android:orientation="horizontal"
        android:layout_above="@+id/l8"
        android:layout_centerHorizontal="true">

        <!--<TextView
            android:id="@+id/tag8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Atual"
            android:textSize="14sp"
            android:textStyle="normal|bold" /> -->

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Zona Actual"
            android:textSize="16dp"
            android:textStyle="normal|bold"
            android:layout_above="@+id/l7"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/atual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="defaultValue "
            android:textSize="16dp"
            android:gravity="center"
            android:layout_marginLeft="12dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/l8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:layout_above="@+id/linearLayout2"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/lastlog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="defaultValue "
            android:gravity="center_horizontal" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_alignParentBottom="true"
        android:background="@color/black"
        android:id="@+id/linearLayout">

        <Button
            android:id="@+id/entrar"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:background="@color/entrarNormal"
            android:foreground="?android:attr/selectableItemBackground"
            android:text="Entrar"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/sair"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_weight="50"
            android:background="@color/sairNormal"
            android:foreground="?android:attr/selectableItemBackground"
            android:text="Sair"
            android:textColor="#fff" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_above="@+id/linearLayout"
        android:layout_margin="0dp">

        <TextView
            android:id="@+id/alert"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="DIA NÃO AUTORIZADO "
            android:visibility="invisible"
            android:gravity="center_vertical|center_horizontal"
            android:textStyle="bold"
            android:textSize="20dp"
            android:background="#ff0000"
            android:textColor="#ffffff" />
    </LinearLayout>

    <ImageView
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:id="@+id/imageView"
        android:layout_below="@+id/l5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="8dp" />


</RelativeLayout>