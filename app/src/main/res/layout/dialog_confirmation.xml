<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_confirmation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_floating_material_light"
    android:orientation="vertical">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_below="@+id/app_bar"
        android:layout_centerHorizontal="true" />


    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="default name"
        android:textSize="24sp"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/identificationnumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:gravity="center"
        android:text="default value id "
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/l4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/identificationnumber"
        android:gravity="clip_vertical"
        android:layout_marginTop="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="0dp"
            android:layout_weight="50"
            android:orientation="vertical">


            <TextView
                android:id="@+id/type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="default type "
                android:gravity="center_horizontal"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/subtype"
                android:layout_marginTop="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="defaultValue subtype "
                android:gravity="center_horizontal"
                android:textSize="12dp" />

        </LinearLayout>

        <View
            android:layout_marginTop="0dp"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="0dp"
            android:layout_weight="50"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Zona Actual"
                android:textSize="14dp"
                android:textStyle="normal|bold"
                android:layout_above="@+id/l7"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/atual"
                android:layout_marginTop="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="defaultValue "
                android:gravity="center_horizontal"
                android:textSize="12dp" />


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/l4"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tag3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Dias"
            android:textSize="13sp"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:gravity="left"
            android:text="defaultValue "
            android:textSize="12dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/l5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/l1"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:longClickable="false"
        android:orientation="horizontal"
        android:layout_marginTop="4dp">

        <TextView
            android:id="@+id/tag6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Zonas"
            android:textSize="13sp"
            android:textStyle="normal|bold"
            android:layout_marginTop="0dp" />

        <TextView
            android:id="@+id/zone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:gravity="left"
            android:text="defaultValue "
            android:layout_marginTop="0dp"
            android:textSize="12dp" />

    </LinearLayout>


    <TextView
        android:id="@+id/lastlog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="defaultValue "
        android:layout_gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_above="@+id/alert"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginBottom="4dp"
        android:textSize="10dp"
        android:textColor="@color/common_signin_btn_light_text_disabled" />

    <TextView
        android:id="@+id/alert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttons"
        android:background="#ff0000"
        android:gravity="center_vertical|center_horizontal"
        android:text="DIA NÃƒO AUTORIZADO "
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:textStyle="bold"
        android:visibility="invisible" />

    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:background="@color/black">

        <Button
            android:id="@+id/entrar"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:background="@color/entrarNormal"
            android:foreground="?android:attr/selectableItemBackground"
            android:text="Entrar"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/sair"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_weight="50"
            android:background="@color/sairNormal"
            android:foreground="?android:attr/selectableItemBackground"
            android:text="Sair"
            android:textColor="#fff" />
    </LinearLayout>
</RelativeLayout>