<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_confirmation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_floating_material_light"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="64dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tag1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Id: "
            android:textSize="18sp"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/identificationnumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:gravity="left"
            android:text="defaultValue " />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/l2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/l1"
        android:layout_gravity="center"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tag2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Nome: "
            android:textSize="18sp"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:gravity="left"
            android:text="defaultValue " />
    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/l2"
        android:id="@+id/l3"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="16dp"
        >
        <TextView
            android:id="@+id/tag3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Dias: "
            android:textSize="18sp"
            android:textStyle="normal|bold"/>
        <TextView
            android:id="@+id/days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:gravity="left"
            android:text="defaultValue "
            />

    </LinearLayout>


    <LinearLayout
        android:layout_below="@id/l3"
        android:id="@+id/l4"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="16dp"
        >
        <TextView
            android:id="@+id/tag4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Tipo: "
            android:textSize="18sp"
            android:textStyle="normal|bold"/>
        <TextView
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:gravity="left"
            android:text="defaultValue "
            />

    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/l4"
        android:id="@+id/l5"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="16dp"
        >
        <TextView
            android:id="@+id/tag5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Subtipo: "
            android:textSize="18sp"
            android:textStyle="normal|bold"/>
        <TextView
            android:id="@+id/subtype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:gravity="left"
            android:text="defaultValue "
            />

    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/l5"
        android:id="@+id/l6"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="16dp"
        >
        <TextView
            android:id="@+id/tag6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Zonas de Acesso: "
            android:textSize="18sp"
            android:textStyle="normal|bold"/>
        <TextView
            android:id="@+id/zone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:gravity="left"
            android:text="defaultValue "
            />

    </LinearLayout>



    <LinearLayout
        android:layout_below="@id/l6"
        android:id="@+id/l7"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="16dp"
        >
        <TextView
            android:id="@+id/tag8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Atual: "
            android:textSize="18sp"
            android:textStyle="normal|bold"/>
        <TextView
            android:id="@+id/atual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:gravity="left"
            android:text="defaultValue "
            />

    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/l7"
        android:id="@+id/l8"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="16dp"
        >

    <TextView
        android:id="@+id/lastlog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="defaultValue "
        />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary">

        <Button
            android:id="@+id/entrar"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginRight="2dp"
            android:layout_weight="49"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:text="Entrar"

            android:textColor="@color/white" />

        <Button
            android:id="@+id/sair"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="2dp"
            android:layout_weight="49"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:text="Sair"
            android:textColor="#fff" />
    </LinearLayout>

</RelativeLayout>